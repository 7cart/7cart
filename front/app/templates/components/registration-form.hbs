<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">

        <div class="panel-body">
          <div class="row">

            <div class="col-lg-12">
              <div class="form-group">
                <span class="label label-danger">{{errorMessage}}</span>
              </div>
              <form {{action 'registration' on='submit'}}>
                <div class="form-group">
                  {{elements/validated-input model=this valuePath='name' placeholder='Name' didValidate=didValidate}}
                </div>
                <div class="form-group">
                  {{elements/validated-input model=this valuePath='email' placeholder='Email' didValidate=didValidate}}
                </div>
                <div class="form-group">
                  {{elements/validated-input model=this type="password" valuePath='plainPassword' placeholder='Password' didValidate=didValidate}}
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <button class="form-control btn btn-primary" type="submit">
                        {{#if processing}}
                          <i class="fa fa-cog fa-spin">+</i>
                        {{/if}}Registration
                      </button>
                    </div>
                  </div>
                </div>
              </form>
              <span {{action (route-action 'openModal' 'login')}}>
                <a href="#">Login</a>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{yield}}