{{#bs-navbar type=(if inverse 'inverse') fluid=fluid collapsed=collapsed onCollapse=(action (mut collapsed) true) onExpand=(action (mut collapsed) false) as |navbar|}}
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand"}}Brand{{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#each categories as |category|}}
        {{#if category.isTopLevel}}
          {{#nav.item}}
            {{#nav.link-to "category" category active=(in-breadcrumbs category.id)}}
              {{category.title}}
            {{/nav.link-to}}
          {{/nav.item}}
        {{/if}}
      {{/each}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}

{{yield}}